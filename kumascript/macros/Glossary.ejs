<%
// Inserts a link to a term's entry in our glossary.
//
// Parameters:
//
//  $0 - Term name
//  $1 - name to display (optional)

let str = $1 || $0;

const baseURL = `/${env.locale}/docs/Glossary`;
const URL = `${baseURL}/${$0.replace(/\s+/g,'_')}`;
const link = web.smartLink(URL, null, str, null, baseURL);

%><%- link %>
